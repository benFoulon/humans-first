{% extends 'base_backend.html.twig' %}

{% block title %}SpontaneousCandidacy index{% endblock %}

{% block body %}
    <h1>SpontaneousCandidacy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>firstname</th>
                <th>Lastname</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>Town</th>
                <th>HighestQualification</th>
                <th>ActivityDomain</th>
                <th>Cv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spontaneous_candidacy in spontaneous_candidacies %}
