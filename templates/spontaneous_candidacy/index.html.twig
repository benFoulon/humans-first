                <td>{{ spontaneous_candidacy.phone }}</td>
                <td>{{ spontaneous_candidacy.town }}</td>
                <td>{{ spontaneous_candidacy.highestQualification }}</td>
                <td>{{ spontaneous_candidacy.activityDomain }}</td>
                <td>{{ spontaneous_candidacy.cv }}</td>
                <td>
                    <a href="{{ path('spontaneous_candidacy_show', {'id': spontaneous_candidacy.id}) }}">show</a>
                    <a href="{{ path('spontaneous_candidacy_edit', {'id': spontaneous_candidacy.id}) }}">edit</a>
                </td>
            </tr>
