{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Type</th>
                <th>Town</th>
                <th>BusinessName</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>Object</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.firstname }}</td>
                <td>{{ message.lastname }}</td>
                <td>{{ message.type }}</td>
                <td>{{ message.town }}</td>
                <td>{{ message.businessName }}</td>
                <td>{{ message.mail }}</td>
                <td>{{ message.phone }}</td>
                <td>{{ message.object }}</td>
                <td>{{ message.content }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('message_new') }}">Create new</a>
{% endblock %}
